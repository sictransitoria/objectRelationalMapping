<!DOCTYPE html>
	<html>
		<head>
			<title>Object Relational Mapping</title>
			<link rel="stylesheet" type="text/css" href="../style.css">
		</head>

		<body>
			<h1>List of Users</h1>
					<table>
						<tr>
							<th>ID:</th>
							<th>First Name:</th>
							<th>Last Name:</th>
						</tr>
						
						<% for(let i in result.rows) {%>

							<tr>
								<td><%=  result.rows[i].id  %></td>
								<td><%=  result.rows[i].name  %></td>
								<td><%=  result.rows[i].email  %></td>

								<form method='GET' action='/edit/test_user/<%= result.rows[i].id %>' >
									<td><button class="btn-edit">  EDIT  </button></td>
								</form>

								<form method='POST' action='/delete/test_user/<%= result.rows[i].id %>' >
								<td><button class="btn-delete">  DELETE  </button></td>
								</form>
							</tr>
						
						<% } %>
					
					</table>
				</form>
		</body>
	</html>